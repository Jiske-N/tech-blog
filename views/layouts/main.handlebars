<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        />
        <title>Tech Blog</title>
    </head>
    <body class="bg-dark">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <h1 class="navbar-brand">{{header_title}}</h1>
                <button
                    class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav"
                    aria-controls="navbarNav"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                >
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard">Dashboard</a>
                        </li>
                        {{#if logged_in}}
                            <div class="mb-3">
                                <button
                                    type="button"
                                    class="nav-link"
                                    id="logout"
                                >Logout</button>
                            </div>
                        {{else}}
                            <li class="nav-item">
                                <a class="nav-link" href="/login">Login</a>
                            </li>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </nav>

        <main>
            <div class="bg-dark">{{{body}}}</div>
        </main>
        {{! <footer>
        <p id="footertag">Made with a <span id="UTF-8style">&#128187</span> by Jiske</p>
        <ul id="contactlinks">
            <li>Portfolio: <a id="externallink" href="https://github.com/Jiske-N">Jiske-N</a></li>
            <!-- placeholder link to be updated in the future -->
            <li>Email: <a id="externallink" href="mailto:example@email.com">example@email.com</a></li>
        </ul>
    </footer> }}
        <script src="/js/logout.js"></script>
    </body>
</html>