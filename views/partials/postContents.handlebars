<div class='container bg-dark'>
  <a href='/comment/{{id}}' class='card mt-4 text-decoration-none'>
    <h5 class='card-header bg-success text-white'>{{title}}</h5>
    <div class='card-body'>
      <p class='card-text'>{{content}}</p>
      <blockquote class='blockquote mb-0'>
        <footer class='blockquote-footer'>{{name}}
          <cite title='Date'>{{updatedAt}}</cite></footer>
      </blockquote>
    </div>
  </a>
</div>